<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>500 â€” Something went wrong â€¢ Book Haven</title>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    :root{
      --bg1: #16121a;      /* deep */
      --bg2: #3b273f;      /* warm plum */
      --accent-1: #ff6f91; /* coral */
      --accent-2: #ffaf7b; /* peach */
      --muted: #cbd5e1;
      --glass: rgba(255,255,255,0.04);
    }

    /* Reset */
    *{box-sizing:border-box;margin:0;padding:0}
    html,body{height:100%}
    body{
      font-family:"Poppins",system-ui,-apple-system,Segoe UI,Roboto,"Helvetica Neue",Arial;
      background: radial-gradient(1200px 600px at 10% 10%, rgba(79,38,75,0.25), transparent 8%),
                  radial-gradient(1000px 500px at 90% 90%, rgba(255,111,145,0.08), transparent 10%),
                  linear-gradient(180deg,var(--bg1),var(--bg2));
      color:#f6f7fb;
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
      display:flex;
      align-items:center;
      justify-content:center;
      padding:48px;
    }

    /* container */
    .card {
      width:100%;
      max-width:980px;
      background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.02));
      border-radius:20px;
      box-shadow: 0 12px 40px rgba(2,6,23,0.6);
      overflow:hidden;
      display:grid;
      grid-template-columns: 1fr 420px;
      gap:0;
      align-items:stretch;
    }

    /* left panel (message + actions) */
    .left {
      padding:48px;
      position:relative;
    }

    .logo {
      font-size:1.1rem;
      font-weight:700;
      color:var(--accent-2);
      letter-spacing:0.6px;
    }

    .code {
      font-size:88px;
      font-weight:800;
      line-height:0.9;
      margin-top:18px;
      color:#fff;
      text-shadow: 0 6px 26px rgba(0,0,0,0.6);
      transform:translateZ(0);
    }

    .subtitle {
      font-size:20px;
      margin-top:8px;
      color:var(--muted);
    }

    .explain {
      margin-top:18px;
      color:#dbeafe;
      opacity:0.95;
      font-size:15px;
      max-width:52ch;
      line-height:1.6;
    }

    .actions {
      margin-top:28px;
      display:flex;
      gap:12px;
      align-items:center;
      flex-wrap:wrap;
    }

    .btn {
      background: linear-gradient(90deg,var(--accent-1),var(--accent-2));
      border:none;
      color:white;
      padding:12px 18px;
      border-radius:12px;
      font-weight:600;
      cursor:pointer;
      box-shadow:0 8px 20px rgba(255,111,145,0.12);
      transition: transform .18s ease, box-shadow .18s ease, opacity .18s;
    }
    .btn:hover{ transform: translateY(-4px) scale(1.01); box-shadow:0 16px 32px rgba(255,111,145,0.18) }

    .btn.ghost {
      background: transparent;
      color:var(--muted);
      border:1px solid rgba(255,255,255,0.06);
      backdrop-filter: blur(6px);
      box-shadow:none;
    }
    .btn.ghost:hover { color: white; transform: translateY(-4px) }

    .small {
      display:flex;
      gap:12px;
      margin-top:18px;
      font-size:13px;
      color:var(--muted);
      align-items:center;
    }

    .small a { color:var(--accent-2); text-decoration:none; font-weight:600 }
    .small a:hover { text-decoration:underline }

    /* right panel - visual / illustration */
    .right {
      background:
        linear-gradient(180deg, rgba(255,255,255,0.01), rgba(0,0,0,0.06)),
        radial-gradient(circle at 20% 10%, rgba(255,111,145,0.06), transparent 10%),
        linear-gradient(180deg, rgba(255,111,145,0.03), transparent 40%);
      padding:28px;
      display:flex;
      align-items:center;
      justify-content:center;
      position:relative;
    }

    .cover-wrap{
      width:92%;
      max-width:360px;
      background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
      border-radius:14px;
      padding:18px;
      box-shadow: 0 10px 30px rgba(2,6,23,0.6), inset 0 1px 0 rgba(255,255,255,0.02);
      transform: translateY(0);
      transition: transform .6s cubic-bezier(.2,.9,.2,1), box-shadow .4s;
    }

    .cover {
      width:100%;
      height:420px;
      border-radius:10px;
      overflow:hidden;
      background: linear-gradient(180deg,#2b1b2e,#462a3d);
      display:flex;
      align-items:center;
      justify-content:center;
      color:rgba(255,255,255,0.85);
      font-weight:700;
      font-size:20px;
      letter-spacing:0.4px;
      position:relative;
    }

    /* subtle animated "paper" layers behind cover */
    .paper1, .paper2 {
      position:absolute;
      left:-18px;
      top:16px;
      width:96%;
      height:92%;
      border-radius:8px;
      transform:rotate(-2deg);
      background: linear-gradient(180deg, rgba(255,255,255,0.02), transparent);
      box-shadow: 0 12px 30px rgba(2,6,23,0.45);
      z-index:-2;
      transition: transform .6s;
    }
    .paper2 { transform: rotate(2deg); right:-18px; left:auto; top:40px; z-index:-3 }

    .cover .bigface {
      font-size:120px;
      line-height:1;
      opacity:0.9;
      transform:translateY(-6px);
    }

    /* hovering effect to make it alive */
    .genre-list {
      margin-top:14px;
      display:flex;
      gap:8px;
      flex-wrap:wrap;
    }
    .tag {
      background:var(--glass);
      padding:6px 10px;
      border-radius:10px;
      color:var(--muted);
      font-size:12px;
      border:1px solid rgba(255,255,255,0.02);
    }

    /* responsive */
    @media (max-width:980px){
      .card { grid-template-columns: 1fr; max-width: 920px }
      .right { order:-1; padding-top: 12px }
      .cover { height:340px }
    }
    @media (max-width:520px){
      body { padding:20px }
      .left { padding:28px }
      .cover { height:260px }
      .code { font-size:56px }
    }
  </style>
</head>
<body>
  <main class="card" role="main" aria-labelledby="errTitle">
    <section class="left">
      <div class="logo">ðŸ“š Book Haven</div>

      <h1 id="errTitle" class="code" aria-hidden="true">500</h1>
      <p class="subtitle">Internal server error</p>

      <p class="explain">
        Oops â€” something went wrong on our side. The server encountered an unexpected condition and couldn't complete your request.
        This is our fault, not yours. Try refreshing, come back later, or contact us if the problem persists.
      </p>

      <div class="actions" aria-hidden="false">
        <button class="btn" id="retryBtn" title="Retry">Try again</button>
        <button class="btn ghost" id="homeBtn" title="Go home">Go to Home</button>
        <button class="btn ghost" id="reportBtn" title="Report issue">Report issue</button>
      </div>

      <div class="small" aria-hidden="false">
        <span>Tip: </span>
        <span>If you were uploading or saving something, please retry after a moment.</span>
        <span style="margin-left:auto">Need help? <a href="mailto:support@bookhaven.example">support@bookhaven.example</a></span>
      </div>

      <div class="genre-list" aria-hidden="true">
        <span class="tag">Status: 500</span>
        <span class="tag">Server</span>
        <span class="tag">Try refresh</span>
      </div>
    </section>

    <aside class="right" aria-hidden="true">
      <div class="cover-wrap" id="coverWrap" role="img" aria-label="Decorative illustration">
        <div class="paper1"></div>
        <div class="paper2"></div>

        <div class="cover">
          <div>
            <div style="opacity:.9;font-weight:700;margin-bottom:8px">Something's off</div>
            <div class="bigface">:(</div>
          </div>
        </div>

        <!-- small explanatory caption -->
        <div style="margin-top:12px;color:var(--muted);font-size:13px;text-align:center">
          Our engineers have been notified. You can help by reporting what you were doing.
        </div>
      </div>
    </aside>
  </main>

  <script>
    // Buttons: try again (reload), go home, report (mailto)
    const retry = document.getElementById('retryBtn');
    const home = document.getElementById('homeBtn');
    const report = document.getElementById('reportBtn');

    retry.addEventListener('click', () => {
      // subtle disabled state then reload
      retry.disabled = true;
      retry.style.opacity = '.8';
      setTimeout(() => location.reload(), 220);
    });

    home.addEventListener('click', () => {
      window.location.href = '/';
    });

    report.addEventListener('click', () => {
      // open mail client with subject + prefilled body
      const subject = encodeURIComponent('500 error report â€” Book Haven');
      const body = encodeURIComponent('I encountered a 500 error on Book Haven. URL: ' + location.href + '\n\nSteps to reproduce:\n1.\n2.\n\nAdditional info:');
      window.location.href = `mailto:support@bookhaven.example?subject=${subject}&body=${body}`;
    });

    // small animated hover on cover-wrap to feel alive
    const coverWrap = document.getElementById('coverWrap');
    coverWrap.addEventListener('mousemove', (e) => {
      const rX = (e.clientX / window.innerWidth - 0.5) * 10;
      const rY = (e.clientY / window.innerHeight - 0.5) * -8;
      coverWrap.style.transform = `rotateX(${rY}deg) rotateY(${rX}deg) translateZ(0)`;
    });
    coverWrap.addEventListener('mouseleave', () => {
      coverWrap.style.transform = 'rotateX(0) rotateY(0)';
    });
  </script>
</body>
</html>
