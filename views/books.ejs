    <nav>
      <a href="/">Home</a>
      <a href="/books">All Books</a>
      <a href="/about">About</a>
    </nav>
  </header>

  <main>
    <form class="search-bar" id="form" action="/books/search" method="POST">
      <input id="search" type="text" value = "<%=query%>" name="query" placeholder="Search for a book or genre..." required />
      <button type="submit">Search</button>
    </form>
  <section class="book-grid">
<%if(data.length===0) {%>
  <section class="hero">
<p> No results &#128542 </p>
</section>
  <%}%>
    <section class="book-container">
      <% data.forEach(el => { %>
        <div class="book-card">
          <img src="<%= el.coverurl %>" alt="Book Cover" />
          <div class="book-info">
            <h3><%= el.title %></h3>
            <p><%= el.author %></p>
            <p><%= el.publishyear %></p>
            <span class="genre-tag"><%= el.genre %></span>
          </div>
        </div>
      <% }) %>
    </section>
  </main>

