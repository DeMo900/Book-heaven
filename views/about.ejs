  <style>
    body {
      margin: 0;
      padding: 0;
      background: linear-gradient(135deg, #1f1c2c, #928dab);
      color: #fdf5e6;
      font-family: 'Poppins', 'Courier New', monospace;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      text-align: center;
      overflow-x: hidden;
    }

    h1 {
      margin-top: 60px;
      font-size: 2.8rem;
      letter-spacing: 1.5px;
      background: linear-gradient(90deg, #ff6a00, #ee0979);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      transition: transform 0.3s ease, text-shadow 0.3s ease;
      cursor: default;
    }

    h1:hover {
      transform: scale(1.05);
      text-shadow: 0 0 15px rgba(255, 106, 0, 0.6), 0 0 25px rgba(238, 9, 121, 0.4);
    }

    p, div {
      width: 80%;
      max-width: 900px;
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(6px);
      border-radius: 20px;
      padding: 30px;
      font-size: 1.1rem;
      line-height: 1.8;
      margin: 20px 0;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
      transition: all 0.4s ease;
      cursor: default;
    }

    p:hover, div:hover {
      transform: scale(1.03);
      background: rgba(255, 255, 255, 0.15);
      box-shadow: 0 6px 25px rgba(255, 255, 255, 0.2);
    }

    div {
      font-style: italic;
      color: #ffeedd;
    }

    p::first-letter {
      font-size: 2rem;
      font-weight: bold;
      color: #ff758c;
    }

    .back-home {
      margin: 30px 0;
      padding: 12px 25px;
      background: linear-gradient(90deg, #ff6a00, #ee0979);
      color: white;
      text-decoration: none;
      font-weight: bold;
      border-radius: 25px;
      box-shadow: 0 0 10px rgba(255, 106, 0, 0.6);
      transition: all 0.3s ease;
      letter-spacing: 1px;
    }

    .back-home:hover {
      transform: scale(1.08);
      box-shadow: 0 0 20px rgba(255, 106, 0, 0.8), 0 0 35px rgba(238, 9, 121, 0.7);
      background: linear-gradient(90deg, #ee0979, #ff6a00);
    }

    footer {
      margin-top: auto;
      padding: 20px;
      font-size: 0.9rem;
      color: #dcdcdc;
      opacity: 0.7;
      transition: opacity 0.3s ease;
    }

    footer:hover {
      opacity: 1;
      text-shadow: 0 0 8px #fff;
    }

    @keyframes fadeInUp {
      0% {
        opacity: 0;
        transform: translateY(30px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    h1, p, div, .back-home, footer {
      animation: fadeInUp 0.9s ease forwards;
    }

    p { animation-delay: 0.2s; }
    div:nth-of-type(1) { animation-delay: 0.4s; }
    div:nth-of-type(2) { animation-delay: 0.6s; }
    .back-home { animation-delay: 0.8s; }
    footer { animation-delay: 1s; }

    @media (max-width: 600px) {
      h1 { font-size: 2rem; }
      p, div { font-size: 1rem; width: 90%; padding: 20px; }
    }
  </style>
</head>
